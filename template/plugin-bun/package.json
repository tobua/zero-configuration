{
  "scripts": {
    "check": "biome check --write .",
    "types": "tsc"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/bun": "^1.2.20",
    "typescript": "^5.9.2",
    "zero-configuration": "^1.0.5"
  },
  "peerDependencies": {
    "typescript": ">= 5"
  },
  "trustedDependencies": [
    "zero-configuration"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./index.ts",
  "exports": {
    ".": {
      "default": "./index.ts"
    }
  },
  "files": [
    "*.ts"
  ],
  "configuration": {
    "gitignore": "recommended",
    "vscode": "biome",
    "typescript": {
      "extends": "plugin",
      "files": [
        "index.ts"
      ]
    },
    "biome": {
      "extends": "recommended",
      "files": {
        "includes": [
          "**/*"
        ]
      }
    }
  }
}
