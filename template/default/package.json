{
  "scripts": {
    "check": "biome check --apply .",
    "build": "bun build index.tsx --outdir public",
    "watch": "bun build index.tsx --outdir public --watch",
    "server": "bun --watch server.ts",
    "start": "bun watch & bun server",
    "types": "tsc"
  },
  "dependencies": {
    "@biomejs/biome": "^1.7.2",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.4.5",
    "zero-configuration": "^0.7.1",
    "@elysiajs/static": "^1.0.3",
    "elysia": "^1.0.16"
  },
  "trustedDependencies": [
    "zero-configuration"
  ],
  "type": "module",
  "configuration": {
    "gitignore": "bundle",
    "vscode": "biome",
    "biome": {
        "extends": "recommended",
        "linter": {
          "rules": {
            "style": {
              "useFilenamingConvention": "off",
              "noImplicitBoolean": "off",
              "useNamingConvention": "off"
            }
          }
        },
        "files": {
          "ignore": ["dist", "rsbuild.config.ts"]
        }
      },
    "typescript": {
      "extends": "web",
      "include": ["index.tsx"]
    }
  }
}
