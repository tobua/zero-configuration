{
  "scripts": {
    "build": "bun build index.tsx --outdir public",
    "check": "biome check --write .",
    "server": "bun --watch server.ts",
    "start": "bun watch & bun server",
    "types": "tsc",
    "watch": "bun build index.tsx --outdir public --watch"
  },
  "dependencies": {
    "@biomejs/biome": "^1.9.4",
    "@elysiajs/static": "^1.1.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "elysia": "^1.1.25",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.7.2",
    "zero-configuration": "^0.17.6"
  },
  "trustedDependencies": [
    "zero-configuration"
  ],
  "type": "module",
  "configuration": {
    "gitignore": "bundle",
    "vscode": "biome",
    "biome": {
      "extends": "recommended",
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off",
            "noImplicitBoolean": "off",
            "useNamingConvention": "off"
          }
        }
      },
      "files": {
        "ignore": [
          "dist",
          "rsbuild.config.ts"
        ]
      }
    },
    "typescript": {
      "extends": "web",
      "include": [
        "index.tsx"
      ]
    }
  }
}
