{
  "name": "mobile",
  "scripts": {
    "test": "jest",
    "types": "tsc"
  },
  "numic": {
    "icon": {
      "androidForeground": "adaptive-icon.svg",
      "androidBackgroundColor": "#e9e9e9"
    }
  },
  "dependencies": {
    "react": "19.1.0",
    "react-native": "^0.81.0",
    "react-native-safe-area-context": "^5.6.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.10",
    "@types/react-test-renderer": "^19.1.0",
    "jest": "^30.0.5",
    "numic": "^5.5.2",
    "react-test-renderer": "19.1.0",
    "typescript": "^5.9.2",
    "zero-configuration": "^1.0.7"
  },
  "trustedDependencies": [
    "zero-configuration",
    "numic"
  ],
  "type": "module",
  "prettier": "./node_modules/numic/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/numic/configuration/.eslintrc.json"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(png|jpg|ico|jpeg|gif|svg|woff|woff2|mp4)$": "<rootDir>/test/ImageMock.tsx"
    },
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|@react-native)"
    ]
  }
}
