{
  "name": "zero-configuration",
  "description": "Manage all your configuration in one location.",
  "version": "0.0.0-development",
  "repository": "github:tobua/zero-configuration",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "format": "bun biome format . --write",
    "postinstall": "bun index.ts",
    "lint": "bun biome lint .",
    "types": "tsc --noEmit"
  },
  "dependencies": {
    "avait": "^1.0.0",
    "logua": "^3.0.3",
    "parse-gitignore": "^2.0.0",
    "ts-deepmerge": "^7.0.0",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.1",
    "@types/bun": "^1.1.0",
    "@types/parse-gitignore": "^1.0.2",
    "eslint-config-airbnb": "^19.0.4",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "typescript": ">= 5"
  },
  "type": "module",
  "bin": "./index.ts",
  "files": [
    "*.ts",
    "configuration",
    "*.md"
  ],
  "keywords": [
    "configuration",
    "build",
    "webdevelopment",
    "zero-config"
  ],
  "publishConfig": {
    "provenance": false
  },
  "configuration": {
    "gitignore": [
      "node_modules",
      "bun.lockb",
      "test/fixture/*/*",
      "!test/fixture/*/package.json",
      "!test/fixture/*/configuration.ts",
      "!test/fixture/*/configuration.js"
    ],
    "license": "MIT",
    "biome": {
      "extends": "recommended",
      "linter": {
        "rules": {
          "style": {
            "useBlockStatements": "off",
            "noNamespaceImport": "off"
          }
        }
      },
      "files": {
        "ignore": [
          "test/fixture"
        ]
      }
    },
    "vscode": "recommended",
    "typescript": {
      "compilerOptions": {
        "strict": true,
        "skipLibCheck": true,
        "target": "ES2020",
        "lib": [
          "DOM",
          "ES2020"
        ],
        "module": "Preserve"
      },
      "files": [
        "index.ts"
      ]
    }
  }
}
