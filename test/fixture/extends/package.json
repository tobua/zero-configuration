{
	"name": "extends",
	"configuration": {
		"eslint": "eslint-config-airbnb",
		"typescript": "my-shared-tsconfig/tsconfig.json",
		"biome": {
			"extends": "recommended",
			"linter": {
				"rules": {
					"style": {
						"useBlockStatements": "off",
						"noNamespaceImport": "off"
					}
				}
			},
			"files": {
				"ignore": ["test/fixture"]
			}
		},
		"vscode": {
			"extends": "biome",
			"extensions": {
				"recommendations": [
					"tauri-apps.tauri-vscode",
					"rust-lang.rust-analyzer"
				  ]
			}
		}
	}
}
