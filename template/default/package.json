{
  "scripts": {
    "build": "bun build index.tsx --outdir public",
    "check": "biome check --write .",
    "server": "bun --watch server.ts",
    "start": "bun watch & bun server",
    "types": "tsc",
    "watch": "bun build index.tsx --outdir public --watch"
  },
  "dependencies": {
    "@biomejs/biome": "^2.2.0",
    "@elysiajs/static": "^1.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "elysia": "^1.3.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "zero-configuration": "^1.0.7"
  },
  "trustedDependencies": [
    "zero-configuration"
  ],
  "type": "module",
  "configuration": {
    "gitignore": "bundle",
    "vscode": "biome",
    "biome": {
      "extends": "recommended",
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off",
            "noImplicitBoolean": "off",
            "useNamingConvention": "off"
          }
        }
      },
      "files": {
        "includes": [
          "**/*",
          "!rsbuild.config.ts",
          "!public"
        ]
      }
    },
    "typescript": {
      "extends": "web",
      "include": [
        "index.tsx"
      ]
    }
  }
}
