{
  "scripts": {
    "check": "biome check --write .",
    "types": "tsc"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/react": "^19.1.10",
    "typescript": "^5.9.2",
    "zero-configuration": "^1.0.7"
  },
  "peerDependencies": {
    "react": ">= 18",
    "typescript": ">= 5"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "trustedDependencies": [
    "zero-configuration"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./index.tsx",
  "exports": {
    ".": {
      "default": "./index.tsx"
    }
  },
  "files": [
    "*.ts",
    "*.tsx"
  ],
  "configuration": {
    "gitignore": "recommended",
    "vscode": "biome",
    "typescript": {
      "extends": "plugin",
      "compilerOptions": {
        "jsx": "react-jsx"
      },
      "files": [
        "index.tsx"
      ]
    },
    "biome": {
      "extends": "recommended",
      "files": {
        "includes": [
          "**/*"
        ]
      }
    }
  }
}
